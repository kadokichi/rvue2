<% content_for :title, "Showing regulation" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">就業規則 詳細</h1>

  <%= render @regulation %>

  <%= link_to "編集", edit_regulation_path(@regulation), class: "link_btn_mt2" %>
  <%= link_to "戻る", regulations_path, class: "link_btn_ml2" %>
  <div class="inline-block ml-2">
    <%= button_to "削除", @regulation, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
