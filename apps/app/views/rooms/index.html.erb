<% content_for :title, "Rooms" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">ルーム一覧</h1>
    <%= link_to"新規ルーム作成", new_room_path, class:"new_btn" if admin_signed_in? %>
  </div>

  <div id="rooms" class="min-w-full">
    <% if @rooms.any? %>
      <% @rooms.each do |room| %>
        <%= render room %>
        <p>
          <%= link_to "表示", room, class: "link_btn" %>
          <%= link_to "編集", edit_room_path(room), class: "link_btn_mt2" if admin_signed_in? %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No rooms found.</p>
    <% end %>
  </div>
</div>
