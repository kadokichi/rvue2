<% content_for :title, "Rooms" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">ルーム一覧</h1>
    <%= link_to "New room", new_room_path, class: "new_btn" %>
  </div>

  <div id="rooms" class="min-w-full">
    <% if @rooms.any? %>
      <% @rooms.each do |room| %>
        <%= render room %>
        <p>
          <%= link_to "表示", room, class: "link_btn" %>
          <%= link_to "編集", edit_room_path(room), class: "link_btn_mt2" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No rooms found.</p>
    <% end %>
  </div>
</div>
